<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
    <system.web>
        <compilation xdt:Transform="RemoveAttributes(debug)" />
    </system.web>
    <appSettings>
        <add key="ApiBaseUrl" value="https://api.production.example.com/v1/"
            xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
        <add key="EnableFeatureX" value="true"
            xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
        <add key="LoggingLevel" value="Error"
            xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
        <add key="SupportEmail" value="support@production.example.com"
            xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
        <add key="SmtpServer" value="smtp.example.com"
            xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
        <add key="SmtpPort" value="587"
            xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
        <add key="SmtpUsername" value="noreply@example.com"
            xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
        <add key="SmtpPassword" value="$mallDust30"
            xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
        <add key="JwtSecretKey" value="96a0ef86-599d-49a6-bfd4-65aef7d46e6f"
            xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
        <add key="AllowedCorsOrigins" value="https://frontend.example.com,https://admin.example.com"
            xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
        <add key="ExternalApiTimeout" value="30"
            xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    </appSettings>
    <connectionStrings>
        <add name="DefaultConnection" connectionString="Server=db.example.com;Database=mydb;User Id=produser;Password=prodpassword;"
            xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
    </connectionStrings>
</configuration>
