<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
    <system.web>
        <compilation debug="false"
                     xdt:Transform="Remove"
                     xdt:Locator="Match(debug)" />
    </system.web>

    <appSettings>
        <add key="ApiBaseUrl"
             value="https://api.production.example.com/v1/"
             xdt:Transform="SetAttributes"
             xdt:Locator="Match(ApiBaseUrl)" />
        <add key="EnableFeatureX"
             value="true"
             xdt:Transform="SetAttributes"
             xdt:Locator="Match(EnableFeatureX)" />
        <add key="LoggingLevel"
             value="Error"
             xdt:Transform="SetAttributes"
             xdt:Locator="Match(LoggingLevel)" />
        <add key="SupportEmail"
             value="support@production.example.com"
             xdt:Transform="SetAttributes"
             xdt:Locator="Match(SupportEmail)" />
        <add key="SmtpServer"
             value="smtp.example.com"
             xdt:Transform="SetAttributes"
             xdt:Locator="Match(SmtpServer)" />
        <add key="SmtpPort"
             value="587"
             xdt:Transform="SetAttributes"
             xdt:Locator="Match(SmtpPort)" />
        <add key="SmtpUsername"
             value="noreply@example.com"
             xdt:Transform="SetAttributes"
             xdt:Locator="Match(SmtpUsername)" />
        <add key="SmtpPassword"
             value="$mallDust30"
             xdt:Transform="SetAttributes"
             xdt:Locator="Match(SmtpPassword)" />
        <add key="JwtSecretKey"
             value="96a0ef86-599d-49a6-bfd4-65aef7d46e6f"
             xdt:Transform="SetAttributes"
             xdt:Locator="Match(JwtSecretKey)" />
        <add key="AllowedCorsOrigins"
             value="https://frontend.example.com,https://admin.example.com"
             xdt:Transform="SetAttributes"
             xdt:Locator="Match(AllowedCorsOrigins)" />
        <add key="ExternalApiTimeout"
             value="30"
             xdt:Transform="SetAttributes"
             xdt:Locator="Match(ExternalApiTimeout)" />
    </appSettings>

    <connectionStrings>
        <add name="DefaultConnection"
             connectionString="Server=db.example.com;Database=mydb;User Id=produser;Password=prodpassword;"
             xdt:Transform="SetAttributes"
             xdt:Locator="Match(name)" />
    </connectionStrings>
</configuration>
