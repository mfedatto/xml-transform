<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <system.web>
        <compilation debug="true" targetFramework="8.0" />
        <httpRuntime targetFramework="8.0" />
    </system.web>
    <appSettings>
        <add key="ApiBaseUrl" value="https://dev-api.example.internal/v1/" />
        <add key="EnableFeatureX" value="true" />
        <add key="MaxItemsPerPage" value="50" />
        <add key="SupportEmail" value="support@example.internal" />
        <add key="LoggingLevel" value="Debug" />
        <add key="SmtpServer" value="smtp.example.internal" />
        <add key="SmtpPort" value="2587" />
        <add key="SmtpUsername" value="noreply@example.internal" />
        <add key="SmtpPassword" value="securepassword123" />
        <add key="JwtSecretKey" value="YourSuperSecretKey12345" />
        <add key="AllowedCorsOrigins" value="https://dev-frontend.example.internal,https://dev-admin.example.internal" />
        <add key="ExternalApiTimeout" value="60" />
    </appSettings>
    <connectionStrings>
        <add name="DefaultConnection" connectionString="Server=dev-db.example.internal;Database=mydb;User Id=myuser;Password=mypassword;"
            providerName="System.Data.SqlClient" />
    </connectionStrings>
</configuration>
